{
  "info": {
    "_postman_id": "unique-id",
    "name": "Student API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/healthcheck",
          "host": ["{{baseUrl}}"],
          "path": ["healthcheck"]
        }
      }
    },
    {
      "name": "Get All Students",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/students",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "students"]
        }
      }
    },
    {
      "name": "Get Student by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/students/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "students", ":id"],
          "variable": [
            {
              "key": "id",
              "value": ""
            }
          ]
        }
      }
    },
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{baseUrl}}/api/v1/students",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "students"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"studentId\": \"STU001\",\n  \"dateOfBirth\": \"2000-01-01\",\n  \"grade\": 85\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      }
    },
    {
      "name": "Update Student",
      "request": {
        "method": "PUT",
        "url": {
          "raw": "{{baseUrl}}/api/v1/students/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "students", ":id"],
          "variable": [
            {
              "key": "id",
              "value": ""
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Smith\",\n  \"grade\": 90\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      }
    },
    {
      "name": "Delete Student",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/v1/students/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "students", ":id"],
          "variable": [
            {
              "key": "id",
              "value": ""
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
